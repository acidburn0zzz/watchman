#!/bin/env watchman
# A slightly more complicated service file with function overrides

service_type='oneshot'

start() {
	watchman.msg "Activating the loopback interface (lo)..."
	ip link set lo up
}

stop() {
	watchman.status || {
		watchman.err "$service_name is already disabled"
		return 1
	}
	watchman.msg "Deactivating the loopback interface (lo)..."
	ip link set lo down
	watchman.stop
}
