#!/bin/env watchman
# A slightly more complicated service file with function overrides

service_type='oneshot'

service_command='ip'
service_args='link set lo up'

start() {
	watchman.msg "Activating the loopback interface (lo)..."
	watchman.start && watchman.done
}

stop() {
	watchman.status || {
		watchman.err "$sname is already disabled"
		return 1
	}
	watchman.msg "Deactivating the loopback interface (lo)..."
	ip link set lo down && watchman.undone
}
